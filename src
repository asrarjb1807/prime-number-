given = int(input("enter your number : "))


def while_prime_checker():
    start = 2
    while start < given:
        if given % start == 0:
            print("\nNot prime number")
            start = given + 1
        elif given % start != 0:
            start += 1
    if start == given:
        print("\nPrime Number")

 
# prime_checker()


def for_prime_checker():
    prime = True
    for i in range(2, given):
        if given % i == 0:
            prime = False

    if prime:
        print(f"{given} is a prime number")
    else:
        print(f"{given} is not a prime number")


# for_prime_checker()
